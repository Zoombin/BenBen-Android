<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/com_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        >

        <View
            style="@style/set_item_Line_5"/>

        <LinearLayout
            style="@style/set_layout_item"
            >

            <com.xunao.benben.view.MyTextView
                android:text="收货人姓名"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edt_consignee"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入姓名"
                android:textColor="#787878"
                android:textColorHint="#787878"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                />

        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            style="@style/set_item_Line_5"/>

        <LinearLayout
            style="@style/set_layout_item"
            >

            <com.xunao.benben.view.MyTextView
                android:text="联系电话"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/edt_mobile"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入联系电话"
                android:textColor="#787878"
                android:textColorHint="#787878"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:inputType="number"
                />

        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            style="@style/set_item_Line_5"/>

        <LinearLayout
            android:id="@+id/ll_district"
            style="@style/set_layout_item"
            >

            <com.xunao.benben.view.MyTextView
                android:text="所在区域"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_district"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#787878"
                android:textColorHint="#787878"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="right"
                android:hint="请选择所在区域"
                />

            <ImageView
                style="@style/set_layout_right_image"
                android:src="@drawable/ic_right_arr" />
        </LinearLayout>

        <View
            style="@style/set_item_Line_5"/>
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        style="@style/set_item_Line_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="10dp"
        >



        <com.xunao.benben.view.MyTextView
            android:text="详细地址"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入"
            android:textColor="#787878"
            android:textColorHint="#787878"
            android:textSize="15dp"
            android:gravity="top"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

    <View
        style="@style/set_item_Line_5"/>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="完成"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:background="@drawable/green_but"
        android:padding="10dp"
        />

</LinearLayout>
