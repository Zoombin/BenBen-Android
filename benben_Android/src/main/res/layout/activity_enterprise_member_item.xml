<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_enterprise_member"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/item_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dip"
            android:src="@drawable/icon_com_list_delete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_enterprise_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dip"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text=""
            android:textColor="#000000"
            android:textSize="14dip" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/longBox"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_enterprise_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#606060"
                    android:textSize="14dip" />

                <LinearLayout
                    android:id="@+id/ll_longphone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="12dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_message"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:src="@drawable/icon_msg" />

                    <ImageView
                        android:id="@+id/iv_make_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:src="@drawable/ic_phone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shortBox"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_enterprise_shortphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text=""
                    android:textColor="#606060"
                    android:textSize="14dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_shortmessage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:src="@drawable/icon_msg" />

                    <ImageView
                        android:id="@+id/iv_make_shortphone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:src="@drawable/ic_phone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>