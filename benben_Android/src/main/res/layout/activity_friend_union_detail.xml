<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/com_title_bar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="55dip"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/friend_union_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fragment_private_bg"
                    android:clickable="true"
                    android:paddingBottom="10dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="10dip" >

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/friend_union_poster"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_face"
                        app:riv_mutate_background="true" />

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dip"
                        android:layout_marginTop="3dip"
                        android:layout_toRightOf="@id/friend_union_poster"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/friend_union_name"
                        android:layout_marginLeft="8dip"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/friend_union_poster"
                        android:text=""
                        android:textColor="#848484"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_toright"
                        android:layout_width="14dip"
                        android:layout_height="18dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_right_bar" />
                </RelativeLayout>

                <!--
                <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#ffffff" >

                <View
                    style="@style/set_item_Line_1"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip" />
            </LinearLayout>


                -->

                <RelativeLayout
                    android:id="@+id/friend_union_add_bulletin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dip" >

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:background="#ffffff"
                        android:paddingBottom="5dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="10dip"
                        android:text="联盟公告"
                        android:textColor="#848484"
                        android:textSize="15dp" />

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:background="#ffffff"
                        android:paddingBottom="5dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="10dip"
                        android:textColor="#848484"
                        android:textSize="15dp"
                        android:layout_toRightOf="@+id/friend_union_title"
                        />

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_bulletin"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/friend_union_title"
                        android:background="#ffffff"
                        android:paddingBottom="10dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="5dip"
                        android:text="暂无公告"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_toright2"
                        android:layout_width="14dip"
                        android:layout_height="18dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dip"
                        android:layout_marginTop="30dip"
                        android:src="@drawable/icon_right_bar" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/friend_union_member"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dip" >

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_number"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fragment_private_bg"
                        android:clickable="true"
                        android:paddingBottom="10dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="5dip"
                        android:text="联盟成员(500)"
                        android:textColor="#848484"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="14dip"
                        android:layout_height="18dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/icon_right_bar" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dip"
                    android:background="@drawable/fragment_private_bg"
                    android:clickable="true" >

                    <com.xunao.benben.view.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="5dip"
                        android:text="联盟类型"
                        android:textColor="#848484"
                        android:textSize="15dp" />

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/icon_right_bar"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/friend_union_n"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dip"
                    android:background="@drawable/fragment_private_bg"
                    android:clickable="true" >

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/fragment_private_bg"
                        android:paddingBottom="10dip"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip"
                        android:paddingTop="5dip"
                        android:text="我的名片"
                        android:textColor="#848484"
                        android:textSize="15dp" />

                    <com.xunao.benben.view.MyTextView
                        android:id="@+id/friend_union_namebox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="35dip"
                        android:gravity="center"
                        android:text="123"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="14dip"
                        android:layout_height="18dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:src="@drawable/icon_right_bar" />
                </RelativeLayout>

                <!--
                 <RelativeLayout
                android:id="@+id/friend_union_remark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/fragment_private_bg"
                android:clickable="true"
                android:paddingBottom="8dip"
                android:paddingLeft="15dip"
                android:paddingTop="8dip" >

                <com.xunao.benben.view.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的名片"
                    android:textColor="#848484"
                    android:textSize="15dp" />

                <com.xunao.benben.view.MyTextView
                    android:id="@+id/friend_union_remark_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="35dip"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="18dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dip"
                    android:src="@drawable/icon_right_bar" />
            </RelativeLayout>
                -->

                <com.xunao.benben.view.MyTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:background="#ffffff"
                    android:paddingBottom="8dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="8dip"
                    android:text="联盟简介"
                    android:textColor="#848484"
                    android:textSize="14dp" />

                <com.xunao.benben.view.MyTextView
                    android:id="@+id/friend_union_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:paddingBottom="8dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="8dip"
                    android:text=""
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/friend_union_exit"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/back_union_bg"
            android:text="退出该盟"
            android:textColor="#ffffff"
            android:textSize="16dip" />
    </RelativeLayout>

</LinearLayout>