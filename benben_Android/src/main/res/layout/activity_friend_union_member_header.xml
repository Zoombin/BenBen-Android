<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dip"
    android:orientation="vertical" >
    
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dip"
        android:paddingLeft="18dip"
        android:paddingTop="8dip"
        android:text="盟主"
        android:textColor="#9e9e9e"
        android:textSize="14dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="10dip"
        android:paddingLeft="18dip"
        android:paddingRight="18dip"
        android:paddingTop="10dip" >

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chief_poster"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_face"
            app:riv_corner_radius="5dip"
            app:riv_mutate_background="true" />

        <LinearLayout
            android:id="@+id/ll_chief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/chief_poster"
            android:orientation="horizontal" >

            <com.xunao.benben.view.MyTextView
                android:id="@+id/chief_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:text="老妹妹"
                android:textColor="#000000"
                android:textSize="15dip" />

            <com.xunao.benben.view.MyTextView
                android:id="@+id/chief_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/textview_bg_4"
                android:paddingBottom="1dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="1dip"
                android:gravity="center_horizontal"
                android:text="盟主"
                android:textColor="#068cd9"
                android:textSize="15dip" />
        </LinearLayout>

        <com.xunao.benben.view.MyTextView
            android:id="@+id/chief_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_chief"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/chief_poster"
            android:text="盟主"
            android:textColor="#9e9e9e"
            android:textSize="14dip" />
    </RelativeLayout>

</LinearLayout>
