<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include layout="@layout/com_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_happy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="12dip"
            android:background="#ffffff"
            android:textColor="#000000"
            android:textSize="15dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dip"
            android:background="#bdbdbd" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_alignParentBottom="true"
            android:background="#fcfcfc"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_bad"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:background="@drawable/happy_bg_selector"
                android:clickable="true"
                android:gravity="center"
                 android:visibility="gone"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_bad"
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_marginRight="8dip"
                    android:src="@drawable/icon_bad_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吐槽"
                    android:textColor="#d15b1a"
                    android:textSize="16dip" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                 android:visibility="gone"
                android:background="#d3d3d3" />

            <LinearLayout
                android:id="@+id/ll_good"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:background="@drawable/happy_bg_selector"
                android:clickable="true"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_good"
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_marginRight="8dip"
                    android:src="@drawable/icon_good_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好笑"
                    android:textColor="#42be69"
                    android:textSize="16dip" />
            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                 android:visibility="gone"
                android:background="#d3d3d3" />

            <LinearLayout
                android:id="@+id/ll_next"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:background="@drawable/happy_bg_selector"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="16dip"
                    android:layout_height="16dip"
                    android:layout_marginRight="8dip"
                    android:src="@drawable/icon_next_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一条"
                    android:textColor="#098ee3"
                    android:textSize="16dip" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>