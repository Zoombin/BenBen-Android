<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333c4d"
    android:orientation="vertical" >

    <com.xunao.benben.view.SizeChangeLinearLayout
        android:id="@+id/sizechangeL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/icon_login_logo_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_login_logo_2" />
        <!-- 15358105541 -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="20dp">

            <com.xunao.benben.view.MyEditView
                android:id="@+id/login_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/input_login"
                android:gravity="center"
                android:hint="请输入手机号或者奔犇号"
                android:text="15212341234"
                android:textColorHint="@color/hint_color"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                />

            <ImageView
                android:id="@+id/iv_name_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_tex_clear"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:visibility="gone"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">

            <com.xunao.benben.view.MyEditView
                android:id="@+id/login_passWord"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/input_login"
                android:gravity="center"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:text="111111"
                android:textColorHint="@color/hint_color"
                android:textSize="14dp"
                android:singleLine="true"/>

            <ImageView
                android:id="@+id/iv_pwd_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_tex_clear"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:visibility="gone"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.xunao.benben.view.MyTextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:padding="20dp"
                android:text="新用户"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <com.xunao.benben.view.MyTextView
                android:id="@+id/login_forgetPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:text="忘记密码？"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </RelativeLayout>
    </com.xunao.benben.view.SizeChangeLinearLayout>

</LinearLayout>