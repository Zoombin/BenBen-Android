<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/com_title_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                style="@style/set_item_Line_5"
                android:layout_marginTop="15dip" />

            <RelativeLayout
                android:id="@+id/rl_enter_own_msg"
                android:layout_width="fill_parent"
                android:layout_height="80dip"
                android:background="@drawable/fragment_private_bg"
                android:clickable="true"
                android:paddingLeft="20dip"
                android:paddingRight="15dip" >

                <LinearLayout
                    android:id="@+id/own_img"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_centerVertical="true"
                    android:background="@drawable/head_img_bg"
                    android:orientation="horizontal" >

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/rv_poster"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:scaleType="fitXY"
                        app:riv_corner_radius="5dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/own_img"
                    >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dip"
                        >

                        <LinearLayout
                            android:id="@+id/ll_rank_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            >
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="#D0083B"
                            android:textSize="14dip"
                            />

                        <TextView
                            android:id="@+id/tv_mean_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="#B4B4B4"
                            android:textSize="14dip"
                            android:layout_marginLeft="20dip"
                            />
                        </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_marginLeft="20dp"
                style="@style/set_item_Line_5" />

            <LinearLayout
                android:id="@+id/ll_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dip"
                android:background="#FFFFFF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dip"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户余额"
                        android:textColor="#3c3c3c"
                        android:textSize="15dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#42BE68"
                            android:textSize="30dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="#42BE68"
                            android:textSize="15dip"
                            android:layout_marginLeft="5dip"
                            />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="18dip"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_right_bar"
                    android:layout_marginRight="5dip"/>

            </LinearLayout>

            <View style="@style/set_item_Line_5" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="#ffffff"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/ll_my_order"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_my_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的订单(0)"
                        android:textColor="#9e9e9e"
                        android:textSize="15dip"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/icon_my_order"
                        android:drawablePadding="5dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="7dip"
                    android:layout_marginTop="7dip"
                    android:background="#bcbcbc" />

                <LinearLayout
                    android:id="@+id/ll_collection"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_my_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的收藏(0)"
                        android:textColor="#9e9e9e"
                        android:textSize="15dip"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/icon_my_collect"
                        android:drawablePadding="5dp"
                        />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/set_item_Line_5" />

            <View
                style="@style/set_item_Line_5"
                android:layout_marginTop="15dip" />

            <RelativeLayout
                android:id="@+id/rl_business_order"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/fragment_private_bg"
                android:clickable="true"
                android:paddingLeft="20dip"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="我是商家"
                    android:textColor="#3c3c3c"
                    android:textSize="15dip" />

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="18dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right_bar"
                    android:layout_marginRight="15dip"
                    />
            </RelativeLayout>

            <View style="@style/set_item_Line_5" />

            <View
                style="@style/set_item_Line_5"
                android:layout_marginTop="15dip" />

            <RelativeLayout
                android:id="@+id/rl_mall"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/fragment_private_bg"
                android:clickable="true"
                android:paddingLeft="20dip"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="奔犇商场"
                    android:textColor="#3c3c3c"
                    android:textSize="15dip" />

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="18dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right_bar"
                    android:layout_marginRight="15dip"/>

                <View style="@style/set_item_Line_5"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_auction"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/fragment_private_bg"
                android:clickable="true"
                android:paddingLeft="20dip"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="置顶拍卖行"
                    android:textColor="#3c3c3c"
                    android:textSize="15dip" />

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="18dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right_bar"
                    android:layout_marginRight="15dip"/>

                <View style="@style/set_item_Line_5"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_lottery"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/fragment_private_bg"
                android:clickable="true"
                android:paddingLeft="20dip"
                 >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="抽奖"
                    android:textColor="#3c3c3c"
                    android:textSize="15dip" />

                <ImageView
                    android:layout_width="14dip"
                    android:layout_height="18dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right_bar"
                    android:layout_marginRight="15dip"/>
            </RelativeLayout>

            <View style="@style/set_item_Line_5" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
