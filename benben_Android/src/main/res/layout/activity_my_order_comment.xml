<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/com_title_bar" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        >
        <View
            style="@style/set_item_Line_5"/>

        <LinearLayout
            android:id="@+id/ll_train"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rv_poster"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:scaleType="fitXY"
                app:riv_oval="true"
                android:layout_marginLeft="5dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                >

                <TextView
                    android:id="@+id/tv_short_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/icon_right_bar"
                    android:drawablePadding="5dp"
                    />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#7D7D7D"
                />
        </LinearLayout>

        <View
            style="@style/set_item_Line_5"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            >

            <in.srain.cube.image.CubeImageView
                android:id="@+id/iv_promotion_post"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_marginRight="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_promotion_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:singleLine="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_goods_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="#B4B4B4"
                        android:singleLine="true"
                        />

                    <TextView
                        android:id="@+id/tv_shipping_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="#B4B4B4"
                        android:singleLine="true"
                        android:layout_marginLeft="30dp"
                        />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_goods_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#B4B4B4"
                    android:layout_marginTop="5dp"
                    />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            style="@style/set_item_Line_5"
            />

        <TextView
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#B4B4B4"
            android:padding="10dp"
            android:text="交易成功"
            />

        <View
            style="@style/set_item_Line_5"
            />

    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        style="@style/set_item_Line_5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_goods_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#B4B4B4"
                android:text="综合评定:"
                />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@null"
                    android:text="好评"
                    android:textColor="#B4B4B4"
                    android:checked="true"
                    android:drawableLeft="@drawable/checkbox_style"
                    android:drawablePadding="5dp"
                    />

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@null"
                    android:text="中评"
                    android:textColor="#B4B4B4"
                    android:drawableLeft="@drawable/checkbox_style"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="15dp"
                    />

                <RadioButton
                    android:id="@+id/rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:background="@null"
                    android:text="差评"
                    android:textColor="#B4B4B4"
                    android:drawableLeft="@drawable/checkbox_style"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="15dp"
                    />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/tv_goods_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:textColor="#B4B4B4"
                android:text="我的评价:"
                android:paddingTop="10dp"
                />

            <EditText
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/textview_bg_grey"
                android:minHeight="80dp"
                android:layout_marginLeft="10dp"
                android:hint="请输入评价"
                android:textSize="15dp"
                android:textColor="#B4B4B4"
                android:textColorHint="#B4B4B4"
                android:gravity="top"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/set_item_Line_5"
        />

    <Button
        android:id="@+id/btn_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="评价"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/green_but"
        />

</LinearLayout>
