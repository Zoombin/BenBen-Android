<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/com_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_order_location"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="#7D7D7D"
                                android:textSize="15dp"
                                />

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#7D7D7D"
                                android:textSize="15dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#7D7D7D"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/set_item_Line_5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                >
                <View
                    style="@style/set_item_Line_5"/>

                <LinearLayout
                    android:id="@+id/ll_train"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/rv_poster"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:scaleType="fitXY"
                        app:riv_oval="true"
                        android:layout_marginLeft="5dp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        >

                        <TextView
                            android:id="@+id/tv_short_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:drawableRight="@drawable/icon_right_bar"
                            android:drawablePadding="5dp"
                            />


                    </LinearLayout>


                </LinearLayout>

                <View
                    style="@style/set_item_Line_5"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    >

                    <in.srain.cube.image.CubeImageView
                        android:id="@+id/iv_promotion_post"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:layout_marginRight="10dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/tv_promotion_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textColor="#000000"
                            android:singleLine="true"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            >
                            <TextView
                                android:id="@+id/tv_goods_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textColor="#B4B4B4"
                                android:singleLine="true"
                                />

                            <TextView
                                android:id="@+id/tv_shipping_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:textColor="#B4B4B4"
                                android:singleLine="true"
                                android:layout_marginLeft="30dp"
                                />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_goods_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:textColor="#B4B4B4"
                            android:layout_marginTop="5dp"
                            />


                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/set_item_Line_5"
                    />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                style="@style/set_item_Line_5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="#FFFFFF"
                >


                <LinearLayout
                    android:id="@+id/ll_pay_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    >

                    <CheckBox
                        style="@style/MyCheckboxStyle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:clickable="false"
                        android:checked="true"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支持随时退"
                        android:textColor="#42BE69"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        />

                    <CheckBox
                        style="@style/MyCheckboxStyle"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:clickable="false"
                        android:checked="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支持过期退"
                        android:textColor="#42BE69"
                        android:textSize="18dp"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/tv_order_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7D7D7D"
                        android:textSize="12dp"
                        />

                    <TextView
                        android:id="@+id/tv_order_fee"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#B4B4B4"
                        android:textSize="12dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/tv_pay_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="#FF8200"
                        android:text="付款"
                        android:singleLine="true"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tv_cancel_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="#FF8200"
                        android:text="取消订单"
                        android:singleLine="true"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tv_apply_refund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="#FF8200"
                        android:text="申请退款"
                        android:singleLine="true"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textColor="#7D7D7D"
                        android:text="交易成功"
                        android:singleLine="true"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        />

                </LinearLayout>

                <View
                    android:layout_marginTop="10dp"
                    style="@style/set_item_Line_5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >

                    <LinearLayout
                        android:id="@+id/ll_number_train"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商家"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#969696"
                            android:textSize="15dp"
                            android:drawableLeft="@drawable/icon_order_train_location"
                            android:drawablePadding="10dp"
                            />


                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#dcdcdc"
                        />

                    <LinearLayout
                        android:id="@+id/ll_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系卖家"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#969696"
                            android:textSize="15dp"
                            android:drawableLeft="@drawable/icon_order_connect"
                            android:drawablePadding="10dp"
                            />

                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/set_item_Line_5"/>


                <TextView
                    android:id="@+id/tv_order_sn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7D7D7D"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    />

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_order_code"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#B4B4B4"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_order_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <View
            style="@style/set_item_Line_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_operate1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/textview_bg_grey"
                    android:text="延长收货"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_operate2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/textview_bg_grey"
                    android:text="查看物流"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_operate3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/green_but"
                    android:text="确认收货"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="gone"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
