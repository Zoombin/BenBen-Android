                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:textColor="#42be69"
                    android:textSize="16dp"
                    android:drawableRight="@drawable/right_arrow_icon"

                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_authentication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="2dp"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="商家促销"
                        android:textColor="#848484"
                        android:textSize="16dp"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:id="@+id/tv_consultant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_white_normal_shape"
                        android:text="销售顾问"
                        android:textColor="#848484"
                        android:textSize="14dp"
                        android:padding="2dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#dddddd" />


                <com.xunao.benben.view.NoScrollGridView
                    android:id="@+id/item_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dip"
                    android:padding="10dip"
                    android:horizontalSpacing="5dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="3"
                    android:orientation="horizontal"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="5dp"
                    android:visibility="gone"
                    android:background="#FFFFFF"
                    android:focusable="false"
                    />

                <com.xunao.benben.view.ListViewForScrollView
                    android:id="@+id/item_group_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:focusable="false"
                    android:listSelector="@android:color/transparent"
                    android:layout_marginBottom="1dip"
                    android:visibility="gone"
                    android:dividerHeight="1dp"
                    android:divider="#d8d8d8"
                    />

                <LinearLayout
                    android:id="@+id/ll_promotion_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="活动现场"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="门店的活动照片"
                        android:textColor="#848484"
                        android:textSize="16dp"
                        android:drawableRight="@drawable/icon_right_bar"
                        android:drawablePadding="5dp"
                        />


                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#dddddd" />

                <LinearLayout
                    android:id="@+id/ll_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="所有门店"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:id="@+id/tv_store_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="5家"
                        android:textColor="#848484"
                        android:textSize="16dp"
                        android:drawableRight="@drawable/icon_right_bar"
                        android:drawablePadding="5dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="#dddddd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="18dip"
                android:paddingTop="10dip"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:text="业务介绍"
                    android:textColor="#848484"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:textColor="#3c3c3c"
                    android:textSize="15dp"
                    android:minHeight="50dp"
                    />
            </LinearLayout>

        </LinearLayout>
        </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <LinearLayout
                android:id="@+id/ll_sendmsg"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_send_msg"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="发消息"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_number_train_msg"
                    android:drawablePadding="5dp"
                    />

             </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="#7be99e" />

            <LinearLayout
                android:id="@+id/ll_make_phone"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/btn_make_phone"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="拨号"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/icon_number_train_phone"
                    android:drawablePadding="5dp"
                    />

            </LinearLayout>


        </LinearLayout>
