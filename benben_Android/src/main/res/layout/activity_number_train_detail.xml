            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="180dip"
                android:background="@drawable/bg_number_train_detail" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/tv_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="15dip"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="15dip"
                        android:layout_weight="1"
                        android:text="公告"
                        android:drawableLeft="@drawable/icon_notice"
                        android:drawablePadding="5dp"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/iv_collect"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_toLeftOf="@+id/tv_collect_number"
                        android:layout_marginRight="5dp"
                        />

                    <TextView
                        android:id="@+id/tv_collect_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="15dip"
                        />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/ll_poster"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp">

                    <com.xunao.benben.view.CircularImage
                        android:id="@+id/iv_poster"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/tv_poster_num"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignParentBottom="true"
                        android:textColor="#FFFFFF"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textSize="10dp"
                        />

                    <ImageView
                        android:id="@+id/iv_auto_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_blue_identity"
                        android:layout_marginTop="45dp"
                        android:layout_marginLeft="45dp"
                        android:visibility="gone"
                        />

                </RelativeLayout>

                <!--<com.makeramen.roundedimageview.RoundedImageView-->
