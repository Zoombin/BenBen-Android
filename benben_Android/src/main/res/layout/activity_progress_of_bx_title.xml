<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/fragment_private_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="全部"
            android:textColor="#068cd9"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/iv_all"
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_bx_progress" />

        <View
            android:id="@+id/v_all"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="#068cd9" />

        <View
            android:layout_width="1dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#d4d4d4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wait"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/fragment_private_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_wait"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="待审核"
            android:textColor="#676767"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/iv_wait"
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_bx_progress"
            android:visibility="gone" />

        <View
            android:id="@+id/v_wait"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="#dddddd" />

        <View
            android:layout_width="1dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#d4d4d4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_pass"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/fragment_private_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_no_pass"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="未通过"
            android:textColor="#676767"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/iv_no_pass"
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_bx_progress"
            android:visibility="gone" />

        <View
            android:id="@+id/v_no_pass"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="#dddddd" />

        <View
            android:layout_width="1dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#d4d4d4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/fragment_private_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="退回重申"
            android:textColor="#676767"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_bx_progress"
            android:visibility="gone" />

        <View
            android:id="@+id/v_back"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="#dddddd" />

        <View
            android:layout_width="1dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#d4d4d4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ok"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/fragment_private_bg"
        android:clickable="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="通过"
            android:textColor="#676767"
            android:textSize="15dip" />

        <ImageView
            android:id="@+id/iv_ok"
            android:layout_width="8dip"
            android:layout_height="8dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_bx_progress"
            android:visibility="gone" />

        <View
            android:id="@+id/v_ok"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_alignParentBottom="true"
            android:background="#dddddd" />
    </RelativeLayout>

</LinearLayout>