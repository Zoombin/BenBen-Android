<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
    <View
        style="@style/set_item_Line_5"/>

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rv_poster"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:scaleType="fitXY"
            app:riv_oval="true"
            android:layout_marginLeft="15dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="苏州数码"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:drawableRight="@drawable/icon_right_bar"
                android:drawablePadding="5dp"
                />

        </LinearLayout>




        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#7D7D7D"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            />

    </LinearLayout>

    <View
        style="@style/set_item_Line_5"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <in.srain.cube.image.CubeImageView
                android:id="@+id/iv_promotion_post"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                />

            <ImageView
                android:id="@+id/iv_promotion_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_over_time"
                android:visibility="gone"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/tv_promotion_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="大抢购"
                android:singleLine="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/tv_goods_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#B4B4B4"
                    android:text="￥:400"
                    android:singleLine="true"
                    />

                <TextView
                    android:id="@+id/tv_shipping_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#B4B4B4"
                    android:singleLine="true"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_goods_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#B4B4B4"
                android:text="数量:x1"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/set_item_Line_5"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#B4B4B4"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#7D7D7D"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/tv_order_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#B4B4B4"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_marginLeft="20dp"
            style="@style/set_item_Line_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            >
            
            <View
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_operate1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/textview_bg_grey"
                    android:text="查看物流"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_operate2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/green_but"
                    android:text="手动发货"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_operate6"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/green_but"
                    android:text="查看评价"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_operate3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/grey_btn"
                    android:text="同意退款"
                    android:textSize="14dp"
                    android:textColor="#42be69"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_operate4"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/grey_btn"
                    android:text="拒绝退款"
                    android:textSize="14dp"
                    android:textColor="#42be69"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_operate5"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/grey_btn"
                    android:text="已退款"
                    android:textSize="14dp"
                    android:textColor="#42be69"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/set_item_Line_5"/>

</LinearLayout>
