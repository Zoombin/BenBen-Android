<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EBEBEB"
    android:paddingBottom="10dp"
    >

    <View
        style="@style/set_item_Line_5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#FFFFFF"
        >

        <com.xunao.benben.view.MyTextView
            android:id="@+id/item_buyinfo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dip"
            android:text="自行车"
            android:layout_toLeftOf="@+id/item_buyinfo_n"
            android:layout_marginRight="10dp"
            />

        <com.xunao.benben.view.MyTextView
            android:id="@+id/item_buyinfo_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#E93434"
            android:textSize="15dip"
            android:text="x2"/>

        <com.xunao.benben.view.MyTextView
            android:id="@+id/item_buyinfo_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#a1a1a1"
            android:textSize="12dip"
            android:text="江苏"
            android:layout_below="@+id/item_buyinfo_title"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>

    <View
        android:layout_marginLeft="10dp"
        style="@style/set_item_Line_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_pic"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:src="@drawable/bg_buy_no_pic"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.xunao.benben.view.MyTextView
                    android:id="@+id/tv_min_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#6ABC4D"
                    android:textSize="15dip"
                    android:text="最低报价: 2000"
                    />

                <com.xunao.benben.view.MyTextView
                    android:id="@+id/tv_min_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#a1a1a1"
                    android:textSize="12dip"
                    android:text="元"
                    />

            </LinearLayout>

            <com.xunao.benben.view.MyTextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#a1a1a1"
                android:textSize="12dip"
                android:text="元"
                android:layout_marginTop="3dp"
                />

            <com.xunao.benben.view.MyTextView
                android:id="@+id/item_buyinfo_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="12dip"
                android:text="元"
                android:layout_marginTop="8dp"
                />

            <com.xunao.benben.view.MyTextView
                android:id="@+id/item_buyinfo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#a1a1a1"
                android:textSize="12dip"
                android:text="元"
                android:layout_marginTop="3dp"
                />


        </LinearLayout>

        <ImageView
            android:layout_width="14dip"
            android:layout_height="18dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_right_bar" />


    </LinearLayout>

    <View
        style="@style/set_item_Line_5"/>
</LinearLayout>
