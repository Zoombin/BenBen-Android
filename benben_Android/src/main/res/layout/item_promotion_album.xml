<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bac_white"
    >

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="100dp"
        android:layout_height="140dp" >

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/item_grida_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dip"
            />


        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_below="@+id/item_grida_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="#787878"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_marginRight="5dp"
                        android:drawableLeft="@drawable/icon_album_time"
                        android:drawablePadding="3dp"
                        />


                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="#787878"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



        <!--<TextView-->
            <!--android:id="@+id/tv_add"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="15dp"-->
            <!--android:textColor="#787878"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:text="添加相册"-->
            <!--android:drawableTop="@drawable/icon_addpic_unfocused"-->
            <!--android:drawablePadding="10dp"-->

            <!--/>-->

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_add_album"
            />


    </RelativeLayout>

</RelativeLayout>